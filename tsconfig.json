{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["resources/js/*"]
    }
  },
  "include": [
    "resources/js/**/*.js",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "storage",
    "public",
    "bootstrap",
    "tests",
    "database",
    "app",
    "config",
    "routes",
    "**/*.min.js",
    "**/*.map"
  ]
}